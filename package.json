{
	"name": "uspacy-desktop-app",
	"description": "Uspacy desktop application",
	"version": "0.1.0",
	"license": "MIT",
	"author": {
		"name": "stas.raranetskyi"
	},
	"repository": {
		"url": "git@github.com:Uspacy/desktop-app-1.git"
	},
	"main": "main.js",
	"scripts": {
		"dev": "rimraf dist && run-p dev:webpack dev:electron",
		"build": "rimraf dist && cross-env NODE_ENV=\"production\" webpack --progress && yarn build:electron",
		"dev:webpack": "cross-env NODE_ENV=\"development\" webpack --progress",
		"dev:electron": "wait-on dist/main.js dist/index.html && electronmon .",
		"build:electron": "rimraf dist && electron-builder",
		"build:electron:mac": "yarn build:electron -m",
		"build:electron:win": "yarn build:electron -w",
		"eslint": "eslint --max-warnings=0",
		"eslint:fix": "npm run eslint -- --fix"
	},
	"electronmon": {
		"patterns": [
			"dist/**/*"
		]
	},
	"dependencies": {
		"electron-is-dev": "^2.0.0",
		"electron-push-receiver": "^2.1.3",
		"module-federation-import-remote": "^1.0.22",
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"devDependencies": {
		"@types/node": "^20.7.1",
		"@types/react": "^18.2.23",
		"@types/react-dom": "^18.2.8",
		"@typescript-eslint/eslint-plugin": "^6.7.4",
		"@typescript-eslint/parser": "^6.7.4",
		"cross-env": "^7.0.3",
		"css-loader": "^6.8.1",
		"electron": "^26.2.3",
		"electron-builder": "^24.6.4",
		"electronmon": "^2.0.2",
		"eslint": "^8.50.0",
		"eslint-config-google": "^0.14.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.6.1",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-prettier": "^5.0.0",
		"eslint-plugin-react": "^7.33.2",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"html-webpack-plugin": "^5.5.3",
		"husky": "^8.0.3",
		"lint-staged": "^14.0.1",
		"mini-css-extract-plugin": "^2.7.6",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.0.3",
		"rimraf": "^5.0.5",
		"ts-loader": "^9.4.4",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2",
		"wait-on": "^7.0.1",
		"webpack": "^5.88.2",
		"webpack-cli": "^5.1.4",
    "electron-builder-notarize": "1.5.1"
	},
	"build": {
		"appId": "com.uspacy.app",
		"productName": "Uspacy",
    "afterSign": "electron-builder-notarize",
		"mac": {
			"hardenedRuntime": true,
      "entitlements": "./node_modules/electron-builder-notarize/entitlements.mac.inherit.plist"
		},
		"extraMetadata": {
			"name": "Uspacy messenger"
		},
		"directories": {
			"buildResources": "assets",
			"output": "dist"
		}
	}
}
